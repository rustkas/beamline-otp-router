%% Common Test configuration for R10 E2E tests
%% 
%% Usage:
%%   rebar3 ct --suite test/router_publish_failure_e2e_SUITE --config test/ct.config
%% 
%% Or set environment variables:
%%   export R10_PROFILE=ci
%%   rebar3 ct --suite test/router_publish_failure_e2e_SUITE

[
  {ct,
    [
      %% R10 Load Parameters (defaults for CI)
      {r10_load_clients, 10},              % Number of parallel clients
      {r10_requests_per_client, 20},      % Requests per client
      {r10_failure_type, error},          % error | timeout | delay
      {r10_profile, ci}                   % ci | heavy
    ]
  }
].

%% Note: Profile-specific overrides are handled in router_r10_client_utils:get_r10_config/0
%% Environment variables can override defaults:
%%   R10_LOAD_CLIENTS=50 R10_REQUESTS_PER_CLIENT=100 rebar3 ct --suite test/router_publish_failure_e2e_SUITE

