# Beamline Router Docker Compose Environment Variables

# NATS Configuration
NATS_URL=nats://nats:4222

# c-gateway Configuration
GATEWAY_RATE_LIMIT_ROUTES_DECIDE_LIMIT=100
GATEWAY_DISTRIBUTED_RATE_LIMIT_ENABLED=false
GATEWAY_REDIS_URL=redis://redis:6379
GATEWAY_ADMIN_API_KEY=demo-api-key

# Router Configuration
ROUTER_GRPC_PORT=50051

# CAF Worker Configuration
WORKER_CPU_POOL_SIZE=4
WORKER_IO_POOL_SIZE=8
WORKER_MAX_MEMORY_MB=1024
PROMETHEUS_ENDPOINT=0.0.0.0:9090

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

# Tenant Configuration (for testing)
TEST_TENANT_ID=demo-tenant
TEST_API_KEY=demo-api-key
TEST_POLICY_ID=demo-policy
